@model SportsStore.Web.Models.NavigationModel

@Html.ActionLink("HOME", "List", "Product")

@foreach (var item in Model.Categories)
{
    @Html.RouteLink(item, new
    {
        controller = "Product",
        action = "List",
        category = item,
        page = 1
    },
    new
    {
        @class = item == Model.CurrentCategory ? "selected" : null
    })
}

