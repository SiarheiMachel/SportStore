@model SportsStore.DataAccess.Product
<div class="item">
    <h3>@Model.Name</h3>
    @Model.Description
    <h4>@Model.Price</h4>
    @using (Html.BeginForm("AddToCart", "Cart"))
    {
        @Html.HiddenFor(x => x.Id)
        @Html.Hidden("returnurl", Request.Url.PathAndQuery)
        <input type="submit" value="+ Add to cart"/>
    }
</div>

