@model SportsStore.Web.Models.ShippingDetailsModel

@{
    ViewBag.Title = "SportStore: Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Checkout now</h2>

Please enter your details and we will ship your order right away!
@using (Html.BeginForm())
{
    <h3>Ship to</h3>
    <div>Name: @Html.EditorFor(x => x.Name)</div>
    <h3>Address</h3>
    <div>Line1: @Html.EditorFor(x => x.Address1)</div>
    <div>Line2: @Html.EditorFor(x => x.Address2)</div>
    <div>Line3: @Html.EditorFor(x => x.Address3)</div>
    <div>City: @Html.EditorFor(x => x.City)</div>
    <div>State: @Html.EditorFor(x => x.State)</div>
    <div>Zip: @Html.EditorFor(x => x.Zip)</div>
    <div>Coutry: @Html.EditorFor(x => x.Country)</div>
    <h3>Options</h3>
    <label>
        @Html.EditorFor(x => x.GiftWrap)
        Gift wrap these items
    </label>
    <p align="center">
        <input class="actionButtons" type="submit" value="Complete order"/>
    </p>
}
